<div class="container">
  <div class="row">
    <div class="col-12 justify-content text-center  ">
      <h2><%= @cocktail.name %></h2>
    </div>
  </div>
</div>

<p>Find me in app/views/cocktails/show.html.erb</p>

<%#= link_to 'Back to cocktails', cocktails_path, class: "btn btn-primary" %>
<%#= link_to 'Edit the cocktail', edit_cocktail_path(@cocktail), class: "btn btn-info"  %>


<%#= link_to 'Edit cocktail', new_cocktail_ingredient_path(dose)  %>
<p></p>
<div class="row">
  <% @cocktail.doses.each do |dose| %>
    <div class="col-6 left">
      <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center"><%= dose.ingredient.name %>
          <span><%= link_to dose_path(dose), method: :delete, data: { confirm: 'Sure?' }, class: 'text-danger' do %>
            <i class="fa fa-trash"></i>
          <% end %>
          </span>
        </li>
      </ul>
    </div>
    <div class="col-sm-1 right">
      <ul class="list-group">
        <li class="list-group-item ">
          <span class ="badge badge-primary badge-pill text-center"><%= dose.description %></span>
        </li>
      </ul>
    </div>
  <% end %>
</div>

<%= link_to new_cocktail_dose_path(@cocktail), class: 'btn btn-ghost mt-4' do %>
  <i class="fa fa-plus"></i>

  Add an ingredient!
<% end %>





