<br>
<div class="col-12 justify-content text-center  ">
  <h2>
    <span>
        <%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: 'Sure?' }, class: 'text-secondary', style: 'position-relative' do %>
          <i class="fa fa-times-circle fa-small" data-toggle="tooltip" data-placement="top" title="Delete"></i>
        <% end %>
    </span>
    <span class="text-white font-weight-bold"><%= @cocktail.name %></span>

  </h2>
</div>
<br>
<div class="container" >
  <div class="row d-flex justify-content-around  ">
    <div class="col-6 ">
      <div class="card shadow p-3 mb-5 bg-white rounded">
        <div class="card-body">
          <div class="row justify-content-center">
            <% @cocktail.doses.each do |dose| %>
              <div class="col-9 left ">
                <ul class="list-group ">
                  <li class="list-group-item d-flex justify-content-between align-items-center"><%= dose.ingredient.name %>
                    <span><%= link_to dose_path(dose), method: :delete, data: { confirm: 'Sure?' }, class: 'text-secondary' do %>
<!-- la classe .fa-times-circle a une fonction &:hover $red dans scss -->
                      <i class="fa fa-times-circle fa-2x" data-toggle="tooltip" data-placement="top" title="Delete"></i>
<!-- la bulle "delete" avec data-toggle="tooltip" data-placement="top" title="Delete  -->
                    <% end %>
                    </span>
                  </li>
                </ul>
              </div>
              <div class="col-3 right ">
                <ul class="list-group ">
                  <li class="list-group-item text-center">
                    <span class ="badge badge-primary badge-pill">
<!--  le champ description a Ã©tÃ© mise dans une bulle  -->
                      <%= dose.description %>
                    </span>
                  </li>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="card shadow p-3 mb-5 bg-white rounded">
        <div class="card-body">
          <div class="row justify-content-center">
            <h4>Add an ingredient?</h4>
          </div>
          <div class="col-12 shadow p-3 mb-5 bg-white rounded">
            <%= simple_form_for [@cocktail, @dose] do |f| %>
              <div class="form-inputs">

                <%= f.association :ingredient, collection: @ingredients, label: "Search in the list" %>
                <%= f.input :description, label: "How much ?" %>
              </div>

              <div class="form-actions d-flex justifiy-content-end">
                <span><%= f.button :submit,  "Do you confirm?", class: "btn btn-light" %></span>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>












