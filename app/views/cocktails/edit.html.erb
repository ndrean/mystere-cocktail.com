<br>
<div class="col-12 justify-content text-center  ">
  <h2><%= @cocktail.name %></h2>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-6 ">
      <div class="card shadow p-3 mb-5 bg-white rounded">
        <div class="card-body">
          <div class="row justify-content-center">
            <% @cocktail.doses.each do |dose| %>
              <div class="col-9 left ">
                <ul class="list-group ">
                  <li class="list-group-item d-flex justify-content-between align-items-center"><%= dose.ingredient.name %>
                    <span><%= link_to dose_path(dose), method: :delete, data: { confirm: 'Sure?' }, class: 'text-secondary' do %>
                      <i class="fa fa-backspace"></i>
                    <% end %>
                    </span>
                  </li>
                </ul>
              </div>
              <div class="col-3 right ">
                <ul class="list-group ">
                  <li class="list-group-item text-center">
                    <span class ="badge badge-primary badge-pill"><%= dose.description %></span>
                  </li>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-2"></div> <!-- a supp pour mettre en flexbox le reste -->
    <div class="col-4">
      <div class="card shadow p-3 mb-5 bg-white rounded">
        <div class="card-body">
          <div class="row justify-content-center">
            <h4><i class="fa fa-plus"></i>
                Add an ingredient?</h4>
          </div>
          <div class="col-12 shadow p-3 mb-5 bg-white rounded">
            <%= simple_form_for [@cocktail, @dose] do |f| %>
              <div class="form-inputs">
                <%= f.association :ingredient, collection: @ingredients, label: "Search in the list" %>
                <%= f.input :description, label: "How much ?" %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, class: "btn btn-light" %>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>












