<h1>Edit Cocktail</h1>
<p></p>
<div class="row">
  <% @cocktail.doses.each do |dose| %>
    <div class="col-6 left">
      <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center"><%= dose.ingredient.name %>

          <span><%= link_to dose_path(dose), method: :delete, data: { confirm: 'Sure?' }, class: 'text-danger' do %>
            <i class="fa fa-trash"></i>
          <% end %>
          </span>
        </li>
      </ul>
    </div>
    <div class="col-sm-1 right">
      <ul class="list-group">
        <li class="list-group-item ">
          <span class ="badge badge-primary badge-pill text-center"><%= dose.description %></span>

        </li>
      </ul>

    </div>
  <% end %>
  <div class="container">
    <div class="row col-6">
      <%= simple_form_for[@cocktail,@cocktail.doses] do |f| %>
        <%= f.association :ingredient, collection: @ingredients %>
        <%= f.input :description %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
        <div class="form-inputs">
          <%= f.input :name %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: "btn btn-primary" %>
        </div>
    </div>
  </div>
</div>



