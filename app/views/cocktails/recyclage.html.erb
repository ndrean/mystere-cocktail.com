<div class="container">
  <div class="row">
    <div class="col-12 justify-content text-center  ">
      <h2>Add a cocktail</h2>
    </div>
  </div>
</div>




<div class="container">
  <div class="row col-12">
    <%= simple_form_for(@cocktail) do |f| %>
    <div class="col-12 d-flex justify-content-center">
      <div class="form-inputs">
        <%= f.input :name %>
      </div>

      <div class="form-actions col-6">
        <%= f.button :submit, class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>


<br>
<div class="container">
  <div class="row">
    <div class="col-12 justify-content text-center  ">
      <h2><%= @cocktail.name %></h2>
    </div>
  </div>
</div>


<p></p>
<div class="row justify-content-center">
  <% @cocktail.doses.each do |dose| %>
    <div class="col-6 left">
      <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center"><%= dose.ingredient.name %>
          <span><%= link_to dose_path(dose), method: :delete, data: { confirm: 'Sure?' }, class: 'text-secondary' do %>
            <i class="fa fa-backspace"></i>
          <% end %>
          </span>
        </li>
      </ul>
    </div>
    <div class="col-sm-1 right">
      <ul class="list-group">
        <li class="list-group-item ">
          <span class ="badge badge-primary badge-pill text-center"><%= dose.description %></span>
        </li>
      </ul>
    </div>
  <% end %>
</div>
<div class="container">
  <div class="row">
    <div class="row justify-content-center">
      <div class="row justify-content-center">
        <h4><i class="fa fa-plus"></i>
            Add an ingredient?</h4>
      </div>
      <div class="col-6">
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <div class="form-inputs">
            <%= f.association :ingredient, collection: @ingredients %>
            <%= f.input :description %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, class: "btn btn-light" %>
          </div>
        <% end %>

        <div class="row justify-content-center">
          <%#= link_to new_cocktail_dose_path(@cocktail), class: 'btn btn-ghost mt-4' do %>
            <i class="fa fa-plus"></i>

            Add an ingredient!
          <%# end %>
        </div>
      </div>
    </div>
  </div>
</div>







